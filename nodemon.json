{
  "watch": ["src", "config"],
  "ext": "js,json",
  "ignore": ["src/public", "logs", "test", "*.test.js", "node_modules"],
  "env": {
    "NODE_ENV": "development",
    "MOCK_ML_API": "true",
    "PORT": "3000",
    "LOG_LEVEL": "debug",
    "NOTIFICATION_METHOD": "console",
    "STOCK_CHECK_INTERVAL": "60000",
    "STOCK_THRESHOLD": "3"
  },
  "delay": "1000",
  "verbose": false
}