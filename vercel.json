{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "src/index.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "10mb",
        "maxDuration": 15
      }
    },
    {
      "src": "src/api/*.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "10mb",
        "maxDuration": 15
      }
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "src/index.js"
    },
    {
      "src": "/api/alerts",
      "dest": "src/api/alerts.js"
    },
    {
      "src": "/api/alert-settings",
      "dest": "src/api/alert-settings.js"
    },
    {
      "src": "/api/cleanup-webhooks",
      "dest": "src/api/cleanup-webhooks.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "src/index.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "src/index.js"
    },
    {
      "src": "/login",
      "dest": "client/dist/index.html"
    },
    {
      "src": "/dashboard(.*)",
      "dest": "client/dist/index.html"
    },
    {
      "src": "/assets/(.*)",
      "dest": "client/dist/assets/$1"
    },
    {
      "src": "/",
      "dest": "client/dist/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "src/index.js"
    }
  ],
  "regions": ["cle1"]
}
